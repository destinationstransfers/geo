{
  "name": "@destinationstransfers/geo",
  "version": "0.3.1",
  "description": "Collection of small geography functions",
  "main": "index.js",
  "scripts": {
    "test": "jest"
  },
  "engines": {
    "node": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/destinationstransfers/geo.git"
  },
  "author": "Tino Vyatkin <tino@vtkn.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/destinationstransfers/geo/issues"
  },
  "homepage": "https://github.com/destinationstransfers/geo#readme",
  "devDependencies": {
    "@destinationstransfers/eslint-config": "latest",
    "eslint": "latest",
    "eslint-plugin-node": "latest",
    "jest": "latest",
    "jest-junit": "latest"
  },
  "browser": {
    "./lib/native.js": "./lib/google-maps.js"
  },
  "directories": {
    "test": "__tests__"
  },
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "node",
    "verbose": true,
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "output": "./reports/junit/Jest/test-results.xml"
        }
      ]
    ],
    "coverageReporters": [
      "json",
      "text-summary"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "node"
    ],
    "extends": [
      "@destinationstransfers",
      "plugin:node/recommended"
    ],
    "env": {
      "node": true
    },
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "prefer-object-spread/prefer-object-spread": "off"
    }
  }
}
